import sys
   
try:
    if len(sys.argv) >= 2:
        num = float(sys.argv[1])
    else:
        num = float(sys.stdin.read().strip())

    weather = None
    if len(sys.argv) >= 3:
        weather = sys.argv[2]  
    
    if num >= 25:
        advice = "夏日。半袖などの涼しい服装"

    elif 20 <= num < 25:
        advice = "薄めのジャケット"

    elif 15 <= num < 20 :
        advice = "薄手のセーターやカーディガン、秋冬コート"
    elif 10<= num < 15:
        advice = "厚手のセーターやスウェット"
    elif 5 <=  num < 10:
        advice = "ダウンやウールのコート+手袋、マフラー"
    elif num <5:
        advice = "厚めのダウンやコート、中にヒートテックなどの防寒必須"
    print("服装:", advice)

    if weather is not None:
        weather = weather.lower()
        add = ""

        if weather in ["雨","あめ"]:
             add = "傘と撥水加工のある上着がおすすめ"
        elif weather in ["雪", "ゆき"]:
             add = "ブーツや手袋、カイロがあるといい"
        elif weather in ["曇り","くもり"]:
             add = "日差しがなく少し肌寒いかも"
        elif weather in ["晴れ", "はれ"]:
             add = "日中は日差しが熱くなるかも"
        

        if add:
            print("追加事項:",add)
except ValueError:
    print("エラー:数値を入力してください", file=sys.stderr)
    sys.exit(1)
    

